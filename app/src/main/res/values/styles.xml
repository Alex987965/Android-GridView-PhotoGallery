<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/TranslucentDarkActionBar</item>
    </style>

    <style name="AppTheme.FullScreen" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photo_grid_list_selector</item>
    </style>

    <style name="TranslucentDarkActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#99000000</item>
    </style>

</resources>
